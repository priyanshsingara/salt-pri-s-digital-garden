---
import ThemeToggle from './ThemeToggle.tsx';
---

<div class="flex items-center justify-between w-full mb-0 font-sans text-[18px] leading-[1.5] text-text-main whitespace-nowrap">
    <div class="flex items-center text-text-main">
        <a href="/" class="no-underline !text-text-main font-normal hover:!text-text-main transition-colors">
            Priyansh Singara
        </a>
        {Astro.url.pathname !== '/' && (
            <>
                <span class="font-normal text-text-muted select-none">&nbsp;/&nbsp;</span>
                <a href="/" class="group font-normal !text-text-muted hover:!text-link transition-colors no-underline">
                   <span class="group-hover:underline underline-offset-4 decoration-link">Unfiltered thoughts</span>
                </a>
            </>
        )}
    </div>
    <div class="flex items-center justify-end gap-[16px] w-[362px]">
        <a href="/about" class="font-normal !text-text-muted hover:!text-link transition-colors no-underline hover:no-underline">about</a>
        <ThemeToggle client:load />
    </div>
</div>
